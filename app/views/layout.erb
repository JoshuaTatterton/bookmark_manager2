<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if flash[:notice] %>
      <div id="notice" > <%= flash[:notice] %></div>
    <% end %>
    <% if current_user %>
      <form action="/sessions" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Sign out">
      </form>
      <h2>Welcome, <%= current_user.email %><h2>
    <% end %>
    <%= yield %>
  </body>
</html>
